# Imports go at the top
from microbit import *
from MicroRover import*

robot = Micro_Rover()

while True:
    sensor= robot.infrared_sensor_value()
    display.show(sensor)
    if sensor == 2:
        robot.motor(255,255)
    elif sensor == 4:
        robot.motor (0,100)
    elif sensor == 6:
        robot.motor (0,25)
    elif sensor == 1:
        robot.motor (100,0)
    elif sensor == 3:
        robot.motor (25,0)
    else:
        robot.motor (255,255)
